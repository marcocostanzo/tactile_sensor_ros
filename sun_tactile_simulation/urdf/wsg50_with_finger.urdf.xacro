<?xml version="1.0"?>
<robot name="sun_finger_v3" xmlns:xacro="http://www.ros.org/wiki/xacro">
  
  <xacro:arg name="scale" default="1.0"/>
  <xacro:arg name="finger_version" default="v3"/>

  <!-- Import finger macro -->
  <xacro:include filename="$(find sun_tactile_simulation)/urdf/wsg50_with_finger.xacro" />
  
  <xacro:wsg50_with_finger
    scale="$(arg scale)" 
    finger_version="$(arg finger_version)"
  />

</robot>
